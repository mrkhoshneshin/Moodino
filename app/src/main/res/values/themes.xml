<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Moodino" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pink</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/myNavigationView</item>
        <item name="listPopupWindowStyle">@style/popupMenuStyle</item>

        <item name="android:windowAnimationStyle">@style/fadeAnimation</item>

        <!--  Calendar Color-->
        <item name="colorTextDay">@color/gray_dark_700</item>
        <item name="colorSelectDay">@color/blue</item>
        <item name="colorCurrentDay">@color/gray</item>
        <item name="colorTextDayName">@color/gray_dark_500</item>
        <item name="colorTextDaySelected">@color/white</item>
        <item name="colorMonthSwitch">@color/gray</item>

    </style>

    <style name="Theme.Moodino.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <attr name="colorTextDay" format="reference" />
    <attr name="colorSelectDay" format="reference"/>
    <attr name="colorCurrentDay" format="reference"/>
    <attr name="colorTextDayName" format="reference"/>
    <attr name="colorTextDaySelected" format="reference"/>
    <attr name="colorMonthSwitch" format="reference"/>

</resources>